{
  "version": 2,
  "builds": [
    {
      "src": "bot/server/webapp.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "bot/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/miniapp.html",
      "dest": "/bot/public/miniapp.html",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "src": "/api/validate-webapp-data",
      "dest": "/bot/server/webapp.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/user/(.*)",
      "dest": "/bot/server/webapp.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/user-stats/(.*)",
      "dest": "/bot/server/webapp.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/user-activity/(.*)",
      "dest": "/bot/server/webapp.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/outbound-call",
      "dest": "/bot/server/webapp.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/send-sms",
      "dest": "/bot/server/webapp.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/debug",
      "dest": "/bot/server/webapp.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/bot/server/webapp.js"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "dest": "/bot/public/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/",
      "dest": "/bot/server/webapp.js"
    },
    {
      "src": "/(.*)",
      "dest": "/bot/server/webapp.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/miniapp.html",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://telegram.org https://*.telegram.org https://web.telegram.org https://*.web.telegram.org; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://telegram.org https://*.telegram.org; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data: https:; connect-src 'self' https: wss:;"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "TZ": "UTC"
  },
  "regions": ["iad1"],
  "rewrites": [
    {
      "source": "/app",
      "destination": "/miniapp.html"
    },
    {
      "source": "/miniapp",
      "destination": "/miniapp.html"
    }
  ],
  "redirects": [
    {
      "source": "/mini-app.html",
      "destination": "/miniapp.html",
      "permanent": true
    },
    {
      "source": "/webapp.html",
      "destination": "/miniapp.html",
      "permanent": true
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true
}